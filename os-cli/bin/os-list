#!/usr/bin/env node

const logger = require('../lib/logger')
const request = require('request')
const chalk = require('chalk')

/**
 * Padding.
 */

console.log()
process.on('exit', () => {
  console.log()
})

/**
 * List repos.
 */

request({
  url: 'https://api.github.com/repos/LiPusen/scaffold/git/trees/master',
  headers: {
    'User-Agent': 'os-cli'
  }
}, (err, res, body) => {
  if (err) logger.fatal(err)
  const requestBody = JSON.parse(body)
  if (Array.isArray(requestBody.tree)) {
    console.log('  Available official templates:')
    console.log()
    requestBody.tree.forEach(repo => {
      repo.mode == '040000' && console.log(
        '  ' + chalk.yellow('â˜…') +
        '  ' + chalk.blue(repo.path)
      )
    })
  } else {
    console.error(requestBody.message)
  }
})
